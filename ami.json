{
  "variables": {
    "aws_access_key_id": "",
    "aws_secret_access_key": "",
    "subnet_id": "",
    "vpc_id": ""
  },
  "provisioners": [
    {
      "type": "shell",
      "inline": ["sleep 10"]
    },
    {
      "type": "file",
      "source": "ipython-notebook.conf",
      "destination": "/home/ubuntu/ipython-notebook.conf"
    },
    {
      "type": "shell",
      "scripts": [
        "setup.sh"
      ],
      "binary": true
    },
    {
      "type": "file",
      "source": "ipython_notebook_config.py",
      "destination": "/home/ubuntu/.ipython/profile_nbserver/ipython_notebook_config.py"
    }
  ],
  "builders": [
    {
      "ami_name": "ami/{{timestamp}}",
      "associate_public_ip_address": true,
      "iam_instance_profile": "default",
      "instance_type": "t2.micro",
      "ssh_username": "ubuntu",
      "type": "amazon-ebs",

      "access_key": "{{user `aws_access_key_id`}}",
      "secret_key": "{{user `aws_secret_access_key`}}",

      "region": "us-east-1",
      "source_ami": "ami-df38e6b4",

      "subnet_id": "{{user `subnet_id`}}",
      "vpc_id": "{{user `vpc_id`}}"
    }
  ]
}
